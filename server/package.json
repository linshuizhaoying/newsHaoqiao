{
  "name": "typescript",
  "version": "0.1.1",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && yarn run watch",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "NODE_ENV=production babel-node dist/src/app.js --exec babel-node --presets es2015 ",
    "watch": "concurrently -k -p  \"yarn run watch-ts\" \"yarn run serve\" ",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.25",
    "@types/koa-router": "^7.0.23",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.5.0",
    "eslint": "^4.6.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "mongoose": "^4.11.11",
    "nodemon": "^1.12.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "presets": [
    "es2015"
  ]
}
